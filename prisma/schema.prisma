enum LegalParameterKey {
  ss_empleado
  ss_patrono
  ss_decimo
  se_empleado
  se_patrono
  riesgo_profesional
  isr_r1
  isr_r2
  isr_r3
  decimo_css
}

enum SalaryType {
  MONTHLY
  BIWEEKLY
}

enum PayrollType {
  REGULAR
  THIRTEEN_MONTH
}

enum EmployeeStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  TERMINATED
}

enum PayrollStatus {
  DRAFT
  PENDING_APPROVAL
  APPROVED
  PAID
  REJECTED
}

enum DeductionType {
  SSS
  ISR
  PRIVATE_INSURANCE
  LOAN
  ADVANCE
  OTHER
}

enum AllowanceType {
  OVERTIME
  BONUS
  COMMISSION
  LUNCH_VOUCHER
  TRANSPORTATION
  HOUSING
  OTHER
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  HALF_DAY
  EXCUSED
}

enum LeaveType {
  VACATION
  SICK_LEAVE
  MATERNITY_LEAVE
  PERSONAL_LEAVE
  UNPAID_LEAVE
  OTHER
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum UserRole {
  USER
  ADMIN
  MODERATOR
  SUPER_ADMIN
}

enum PersonStatus {
  Activo
  Inactivo
}

enum ParameterType {
  employee
  employer
  fixed
}

enum ParameterCategory {
  social_security
  educational_insurance
  isr
  other
}

enum PayrollRunStatus {
  DRAFT
  APPROVED
  PAID
  CANCELLED
}
