generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  companies        UserCompany[]
  createdCompanies Company[]     @relation("CompanyCreatedBy")
  person           Person?
  employee         Employee?     @relation("EmployeeUser")
}

model UserCompany {
  userId    String
  companyId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@id([userId, companyId])
}

model Person {
  id           String       @id @default(uuid())
  userId       String       @unique
  firstName    String?
  lastName     String?
  fullName     String?
  contactEmail String?
  phoneNumber  String?
  departmentId String?
  position     String?
  status       PersonStatus @default(Activo)
  userCode     String       @unique
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  companyId    String?

  department Department? @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Company {
  id              String   @id @default(uuid())
  code            String   @unique
  name            String   @unique
  address         String?
  phone           String?
  email           String?
  ruc             String?  @unique
  logoUrl         String?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  createdByUserId String?
  LegalDecimoParameter  LegalDecimoParameter[]
  legalParameters   LegalParameter[]
  createdBy         User?              @relation("CompanyCreatedBy", fields: [createdByUserId], references: [id], onDelete: SetNull)
  departments       Department[]
  users             UserCompany[]
  employees         Employee[]         @relation("EmployeeCompany")
  payrolls          Payroll[]          @relation("PayrollCompany")
  attendanceRecords AttendanceRecord[] @relation("AttendanceCompany")
  leaves            Leave[]            @relation("LeaveCompany")
  payrollRuns           PayrollRun[]     
}

model Department {
  id          String   @id @default(uuid())
  name        String
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  companyId   String

  company Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  persons Person[]
}

model SystemConfig {
  id          String   @id @default(uuid())
  key         String   @unique
  value       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ============================================
// PAYROLL MODELS
// ============================================

model Employee {
  id          String         @id @default(uuid())
  cedula      String         @unique
  firstName   String
  lastName    String
  email       String         @unique
  phoneNumber String?
  position    String
  department  String?
  hireDate    DateTime
  salary      Decimal        @default(0.00)
  salaryType  SalaryType     @default(MONTHLY)
  status      EmployeeStatus @default(ACTIVE)
  bankAccount String?
  bankName    String?

  userId String? @unique
  user   User?   @relation("EmployeeUser", fields: [userId], references: [id], onDelete: SetNull)

  companyId String
  company   Company @relation("EmployeeCompany", fields: [companyId], references: [id], onDelete: Cascade)

  payrolls          Payroll[]
  deductions        Deduction[]
  allowances        Allowance[]
  attendanceRecords AttendanceRecord[]
  leaves            Leave[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([companyId])
  @@index([cedula])
  @@index([userId])
}
// 2. Modelo que agrupa a los 30 empleados (La Planilla Maestra)
model PayrollRun {
  id            String           @id @default(uuid())
  companyId     String
  company       Company          @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  // Datos del per√≠odo para evitar duplicados
  periodDate    DateTime         // Primer d√≠a del mes (ej: 2026-01-01)
  quincena      Int              // 1 o 2
  payrollType   PayrollType      @default(REGULAR)
  
  // Totales acumulados (opcional, pero muy recomendado)
  totalGross    Decimal          @default(0.00)
  totalNet      Decimal          @default(0.00)
  totalDeductions Decimal        @default(0.00)
  
  status        PayrollRunStatus @default(DRAFT)
  
  // Auditor√≠a
  createdByUserId String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  // Relaci√≥n con los registros individuales
  payrolls      Payroll[]

  // ‚ö†Ô∏è CLAVE PARA EVITAR DUPLICADOS: 
  // No puede haber una planilla para la misma empresa, mismo mes, misma quincena y mismo tipo
  @@unique([companyId, periodDate, quincena, payrollType])
  @@index([companyId])
  @@index([periodDate])
}

model Payroll {
  id            String   @id @default(uuid())
  payrollNumber String   @unique
  
  // üëà AGREGAR ESTO: V√≠nculo con el lote (Maestro)
  payrollRunId  String?
  payrollRun    PayrollRun? @relation(fields: [payrollRunId], references: [id], onDelete: Cascade)

  employeeId    String
  employee      Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  
  companyId     String
  company       Company  @relation("PayrollCompany", fields: [companyId], references: [id], onDelete: Cascade)

  // ... (Tus campos actuales: payPeriod, paymentDate, baseSalary, etc.) ...
  payPeriod   DateTime
  paymentDate DateTime
  payrollType PayrollType @default(REGULAR)
  baseSalary  Decimal @default(0.00)
  workingDays Int     @default(30)
  daysWorked  Int     @default(30)
  grossSalary Decimal @default(0.00)
  incomeTax        Decimal @default(0.00)
  sss              Decimal @default(0.00)
  privateInsurance Decimal @default(0.00)
  customDeductions Decimal @default(0.00)
  totalDeductions Decimal @default(0.00)
  netSalary       Decimal @default(0.00)
  thirteenthMonthAmount Decimal? @default(0.00)
  thirteenthMonthNote   String?
  deductions Deduction[]
  allowances Allowance[]
  status       PayrollStatus @default(DRAFT)
  approvedBy   String?
  approvalDate DateTime?
  comments     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // üëà AGREGAR ESTE √çNDICE para que las consultas por lote sean r√°pidas
  @@index([payrollRunId])
  @@index([employeeId])
  @@index([companyId])
  @@index([payPeriod])
  @@index([payrollType])
}

model Deduction {
  id         String   @id @default(uuid())
  payrollId  String?
  payroll    Payroll? @relation(fields: [payrollId], references: [id], onDelete: Cascade)
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  deductionType DeductionType @default(OTHER)
  description   String
  amount        Decimal
  isFixed       Boolean       @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([employeeId])
  @@index([payrollId])
}

model Allowance {
  id         String   @id @default(uuid())
  payrollId  String?
  payroll    Payroll? @relation(fields: [payrollId], references: [id], onDelete: Cascade)
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  allowanceType AllowanceType @default(OTHER)
  description   String
  amount        Decimal

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([employeeId])
  @@index([payrollId])
}

model AttendanceRecord {
  id         String   @id @default(uuid())
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  companyId  String
  company    Company  @relation("AttendanceCompany", fields: [companyId], references: [id], onDelete: Cascade)

  date         DateTime
  checkInTime  DateTime?
  checkOutTime DateTime?
  hoursWorked  Decimal?
  status       AttendanceStatus @default(PRESENT)
  notes        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([employeeId, date])
  @@index([employeeId])
  @@index([companyId])
}

model Leave {
  id         String   @id @default(uuid())
  employeeId String
  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  companyId  String
  company    Company  @relation("LeaveCompany", fields: [companyId], references: [id], onDelete: Cascade)

  leaveType     LeaveType
  startDate     DateTime
  endDate       DateTime
  daysRequested Int
  daysApproved  Int?
  reason        String?
  status        LeaveStatus @default(PENDING)
  approvedBy    String?
  approvalDate  DateTime?
  comments      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([employeeId])
  @@index([companyId])
}

// ‚úÖ AGREGADO: LegalParameter para par√°metros legales (sin JSON)
model LegalParameter {
  id            String   @id @default(uuid())
  key           LegalParameterKey
  name          String
  type          ParameterType   // "employee" | "employer" | "fixed"
  category      ParameterCategory     // "social_security" | "educational_insurance" | "isr" | "other"
  percentage    Float
  minRange      Int?
  maxRange      Int?
  status        String   @default("active")
  effectiveDate DateTime @default(now())
  description   String?

  // ‚úÖ Relaci√≥n con Compa√±√≠a
  companyId     String
  company       Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ‚úÖ Ajuste de √çndices y Unicidad
  @@unique([companyId, key]) // La combinaci√≥n de compa√±√≠a y key debe ser √∫nica
  @@index([companyId])
  @@index([category])
  @@index([status])
}

model LegalDecimoParameter {
  id            String   @id @default(uuid())
  key           LegalParameterKey
  name          String
  type          ParameterType         // "employee" | "employer" | "fixed"
  category      ParameterCategory     // "social_security" | "educational_insurance" | "isr" | "other"
  percentage    Float
  minRange      Int?
  maxRange      Int?
  status        String   @default("active")
  effectiveDate DateTime @default(now())
  description   String?

  // ‚úÖ Relaci√≥n con Compa√±√≠a
  companyId     String
  company       Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ‚úÖ Ajuste de √çndices y Unicidad
  @@unique([companyId, key]) // La combinaci√≥n de compa√±√≠a y key debe ser √∫nica
  @@index([companyId])
  @@index([category])
  @@index([status])
}

// ============================================
// ENUMS
